<Window x:Class="VisualVillage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualVillage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Canvas Name="VillageCanvas" Background="ForestGreen" />
        <TextBlock Text="{Binding VillagerCount, StringFormat='Villager Count: {0}', UpdateSourceTrigger=PropertyChanged}" FontSize="20" Foreground="Black" Canvas.Left="10" Canvas.Top="10" />
    </Grid>
    
</Window>
